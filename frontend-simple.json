{
    "family": "frontend-simple",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::215665149732:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "frontend-container",
            "image": "215665149732.dkr.ecr.us-east-1.amazonaws.com/frontend-nginx:prod",
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {"name": "NODE_ENV", "value": "production"}
            ],
            "essential": true
        }
    ]
}